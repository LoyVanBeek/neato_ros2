[Unit]
Description=Neato ROS 2 robot
Requires=docker.service
After=docker.service
StartLimitIntervalSec=60 
StartLimitBurst=3
  
[Service]
WorkingDirectory=/home/pi/neato_ros2
ExecStart=/usr/bin/docker compose -f docker/docker-compose-robot.yml up
ExecStop=/usr/bin/docker compose -f docker/docker-compose-robot.yml down
Restart=on-failure

[Install]
WantedBy=multi-user.target
